{
  "root": true,
  "extends": ["react-app", "react-app/jest", "eslint:recommended"],
  "plugins": ["react-hooks"],
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "import/no-anonymous-default-export": "off",
    "object-curly-spacing": ["error", "always"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "max-len": [2, { "code": 120 }],
    "no-undef": "off"
  },
  "globals": {
    "React": true,
    "JSX": true
  },
  "overrides": []
}
